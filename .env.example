# SPARK Environment Configuration
# Copy this file to .env and update values for your environment

# ========================================
# DATABASE CONFIGURATION
# ========================================
DB_HOST=db
DB_NAME=spark
DB_USER=root
DB_PASS=rootpassword
DB_PORT=3306

# ========================================
# APPLICATION CONFIGURATION
# ========================================
BASEURL=http://localhost:8080
APP_ENV=development
APP_DEBUG=true

# ========================================
# SECURITY
# ========================================
SECRET_SALT=your-random-secret-salt-here-change-this-in-production

# ========================================
# DOCKER PORTS (External Access)
# ========================================
WEB_PORT=8080
DB_PORT=3308
PMA_PORT=8081

# ========================================
# ADMIN DEFAULT CREDENTIALS
# ========================================
# These are used for initial setup only
ADMIN_EMAIL=admin@spark.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin SPARK

# ========================================
# NOTES
# ========================================
# - DO NOT commit .env to git
# - Change SECRET_SALT in production
# - Change default admin password after first login
# - Use strong passwords in production
